<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainViewRL"
    >

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <!--    列表-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="89%"
            android:orientation="horizontal"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/goodslist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <!--    侧边-->
        <LinearLayout
            android:id="@+id/store_main_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/storeLL_left"
                android:visibility="visible"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#EDF4F4"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/all_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="全部"
                    android:textSize="26sp"
                    />

                <TextView
                    android:id="@+id/pet_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="萌宠"
                    android:textSize="26sp"
                    />

                <TextView
                    android:id="@+id/food_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="宠粮"
                    android:textSize="26sp"
                    />

                <TextView
                    android:id="@+id/toy_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="用具"
                    android:textSize="26sp"
                    />

                <TextView
                    android:id="@+id/cloth_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="衣服"
                    android:textSize="26sp"
                    />

                <TextView
                    android:id="@+id/medio_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="摄影"
                    android:textSize="26sp"
                    />

                <TextView
                    android:id="@+id/miji_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="秘笈"
                    android:textSize="26sp"
                    />

            </LinearLayout>




        </LinearLayout>

        <!--    下栏-->
        <LinearLayout
            android:id="@+id/shopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="10%"
            android:gravity="bottom|right"

            android:layout_alignParentBottom="true"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/price"
                android:layout_width="156dp"
                android:layout_height="66dp"
                android:gravity="center"
                android:textSize="21dp"
                android:text="00.00"
                />

            <Button
                android:id="@+id/buy"
                android:layout_width="88dp"
                android:layout_height="66dp"
                android:text="购买"
                />
        </LinearLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>





</RelativeLayout>